{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@round-midnight/shared": ["../shared/types.ts"],
      "@round-midnight/shared/*": ["../shared/*"]
    },
    "baseUrl": "."
  },
  "include": ["src", "../shared"]
}
