generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  displayName String
  pin         String   @unique
  createdAt   DateTime @default(now())
  lastSeenAt  DateTime @updatedAt

  // Phase E에서 추가
  discordId       String?  @unique
  discordUsername  String?
  discordAvatar   String?
  authProvider     String   @default("pin") // 'pin' | 'discord'

  runs    RunParticipant[]
  unlocks UserUnlock[]

  @@index([pin])
  @@index([discordId])
}

model RunResult {
  id           String   @id @default(uuid())
  roomCode     String
  result       String   // 'retreat' | 'wipe' | 'clear'
  wavesCleared Int
  totalWaves   Int      @default(10)
  highlights   Json     // string[]
  dailySeedId  String?
  dailySeed    DailySeed? @relation(fields: [dailySeedId], references: [id])
  createdAt    DateTime @default(now())

  participants RunParticipant[]

  @@index([dailySeedId])
  @@index([createdAt])
}

model RunParticipant {
  id            String  @id @default(uuid())
  userId        String
  runId         String
  characterName String
  background    String
  survived      Boolean
  damageDealt   Int     @default(0)
  damageTaken   Int     @default(0)

  user User      @relation(fields: [userId], references: [id])
  run  RunResult @relation(fields: [runId], references: [id])

  @@index([userId])
  @@index([runId])
}

model DailySeed {
  id        String   @id @default(uuid())
  date      DateTime @unique // KST 기준 날짜 (시간 00:00:00)
  seed      String
  createdAt DateTime @default(now())

  runs RunResult[]

  @@index([date])
}

model Unlockable {
  id          String @id
  type        String // 'background' | 'cosmetic' | 'startItem'
  name        String
  description String
  condition   Json   // { type: 'clears', count: 10 } etc.
}

model UserUnlock {
  userId       String
  unlockableId String
  unlockedAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@id([userId, unlockableId])
  @@index([userId])
}
